<!--index.wxml-->
<view class="container">
  <text class="range-title">您的选择是：</text>
  <view class="range-section">
    <text class="range-name">{{range}}</text>
    <button type="default" class="play-button" hover-class="play-button-hover" bindtap="play"> 试听声音 </button>
  </view>
    <text class="timer-title">试听请您将手机音量调至自己适合的程度</text>
    <view class="timer-section">
    <button type="primary" size="mini" class="timer-button" hover-class="play-button-hover" bindtap="ok"> 确定 </button>
    <button type="primary" size="mini" class="timer-button" hover-class="play-button-hover" bindtap="back"> 返回频道选择 </button>
</view>
  <text class="warning">可以试用24小时，之后需要购买</text>
</view>
